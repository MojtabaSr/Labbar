@page
@model Lab4.Pages.Library.AddModel

<br />

<div class="col-9">
    <h2>Create a new customer</h2>
</div>


<form method="post" class="m-3">
    <input hidden asp-for="Customer.CustomerId" />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Customer.Name" class="form-control" placeholder="Name" />

        </div>
        <label class="col-sm-2 col-form-label">Mobile number</label>
        <div class="col-sm-10">
            <input asp-for="Customer.MobileNumber" class="form-control" placeholder="Mobile Number" />

        </div>
        <label class="col-sm-2 col-form-label">Age</label>
        <div class="col-sm-10">
            <input asp-for="Customer.Age" class="form-control" placeholder="Age" />

        </div>


    </div>

    <div class="form-group row">

        <button type="submit" class="btn btn-primary mr-1">Add</button>

        <a asp-page="/Library/Index" class="btn btn-primary">Cancel</a>
    </div>
</form>
